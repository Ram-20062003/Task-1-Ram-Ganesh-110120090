<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFAEDDD0"
    android:id="@+id/quiz"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="420dp"
        android:layout_marginRight="420dp"
        android:layout_marginBottom="-3dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="172dp"
        android:layout_marginLeft="172dp"
        android:layout_marginBottom="230dp"
        android:text="DD-MM-YYYY"
        android:textAllCaps="false"
        android:textColor="#2803FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="345dp"
        android:layout_height="172dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginEnd="-394dp"
        android:layout_marginRight="-394dp"
        android:layout_marginBottom="-210dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@id/textView"
        android:background="#B6B3B3">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textSize="16sp"
            app:buttonTint="#000000" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 2"
            android:textSize="16sp"
            app:buttonTint="#000000" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 3"
            android:textSize="16sp"
            app:buttonTint="#000000" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 4"
            android:textSize="16sp"
            app:buttonTint="#000000" />
    </RadioGroup>

    <TextView
        android:id="@+id/instruct"
        android:layout_width="377dp"
        android:layout_height="157dp"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginEnd="-82dp"
        android:layout_marginRight="-82dp"
        android:layout_marginBottom="111dp"
        android:fontFamily="cursive"
        android:text=" "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="-103dp"
        android:background="#0B0A0A"
        android:textColor="#FAFAFA"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="441dp"
        android:layout_marginRight="441dp"
        android:layout_marginBottom="23dp"
        android:text="Choose the correct option"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/finalscore"
        android:layout_width="207dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="66dp"
        android:autoText="false"
        android:shadowColor="#2CF40B"
        android:textColor="#77F803"
        android:textSize="20sp" />

</RelativeLayout>



