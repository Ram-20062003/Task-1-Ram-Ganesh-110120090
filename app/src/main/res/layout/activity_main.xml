<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFAEDDD0"
    android:id="@+id/quiz"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="3dp"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginBottom="378dp"
        android:background="#609DCAED"
        android:text="DD-MM-YYYY"
        android:textAllCaps="false"
        android:textColor="#2803FF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="199dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="-381dp"
        android:layout_marginRight="-381dp"
        android:layout_marginBottom="-245dp"
        android:layout_toStartOf="@+id/textView"
        android:layout_toLeftOf="@id/textView"
        android:background="#B6B3B3">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 1"
            android:textSize="16sp"
            app:buttonTint="#164CEF" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 2"
            android:textSize="16sp"
            app:buttonTint="#F44336" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 3"
            android:textSize="16sp"
            app:buttonTint="#4CAF50" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day 4"
            android:textSize="16sp"
            app:buttonTint="#FFEB3B" />
    </RadioGroup>

    <TextView
        android:id="@+id/instruct"
        android:layout_width="377dp"
        android:layout_height="157dp"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_marginEnd="-82dp"
        android:layout_marginRight="-82dp"
        android:layout_marginBottom="111dp"
        android:background="#EA8B8B"
        android:fontFamily="cursive"
        android:text=" "
        android:textColor="#040404"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/total"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="46dp"
        android:gravity="center_horizontal"
        android:visibility="invisible"
        android:background="#0B0A0A"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="32dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginBottom="37dp"
        android:text="Choose the correct option"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/finalscore"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="75dp"
        android:autoText="false"
        android:background="#F8F5F5"
        android:gravity="center_vertical"
        android:shadowColor="#2CF40B"
        android:textAlignment="center"
        android:textColor="#77F803"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="invisible" />

</RelativeLayout>



